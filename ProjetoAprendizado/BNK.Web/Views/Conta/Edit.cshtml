@model BNK.Web.Application.Contas.Model.ContaModel


@using (Html.BeginForm("AttConta", "Conta", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Edição de Informações da Conta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Num_SeqlConta, "Nº Conta", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Num_SeqlConta, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Num_SeqlConta, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.Nom_NomeUsuar, "Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="hidden" value="@Model.Num_SeqlUsuar" name="Num_SeqlUsuar"/>
                <input class="form-control" value="@Model.Nom_NomeUsuar" readonly/>
                @Html.ValidationMessageFor(model => model.Nom_NomeUsuar, "", new { @class = "text-danger"  })
            </div>
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.Num_SaldoConta,"Saldo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Num_SaldoConta, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Num_SaldoConta, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.Cod_TipoConta, "Tipo de Conta",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="Cod_TipoConta" id="Cod_TipoConta">
                    <option value="1">POUPANÇA</option>
                    <option value="2">CONTA CORRENTE</option>
                </select>
                @Html.ValidationMessageFor(model => model.Cod_TipoConta, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.Date_DataCriacao, "Data Criação",htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date_DataCriacao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.Date_DataCriacao, "", new { @class = "text-danger" })
            </div>
        </div>
    
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Atualizar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    
<div>
    @Html.ActionLink("Voltar ao detalhado", "GetOperacoes", new { Num_SeqlConta = @Model.Num_SeqlConta})
</div>

<script>
    $(document).ready(function () {

    });
</script>

