@model IEnumerable<BNK.Web.Application.Operacoes.Model.OperacaoModel>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    
    <div>
        <h3>
            Buscando Operações da Conta => @if (Model != null && Model.Any()) { @Model.First().Num_SeqlContaOrigem }
        </h3>
    </div>
    
    <p class="btn btn-info">
        @Html.ActionLink("Nova Operação", "NovaOperacao")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Num_SeqlOperacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cod_TipoOperacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num_SeqlContaOrigem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num_SeqlContaDestino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Num_ValorOperacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_DataOperacao)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Num_SeqlOperacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cod_TipoOperacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num_SeqlContaOrigem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num_SeqlContaDestino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Num_ValorOperacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_DataOperacao)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
