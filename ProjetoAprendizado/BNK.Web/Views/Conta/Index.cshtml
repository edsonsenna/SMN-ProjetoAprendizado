
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="container">
        <div class="row">
            @if(@ViewBag.Message != null){
            <div class="alert alert-danger" role="alert">
                @ViewBag.Message
            </div>
            }
        </div>
        <div class="row">
            <h1>Buscar Informações de Conta</h1>
        </div>

        <div class="row">

            <form action="/Conta/GetOperacoes" method="POST">
                <div>
                    <input class="form-control" type="number" name="Num_SeqlConta" placeholder="Informe o número da Conta" />
                </div>
                <div style="margin-top: 15px">
                    <button class="btn btn-success" type="submit">Buscar</button>
                </div>

            </form>
        </div>
    </div>
    
</body>
</html>
